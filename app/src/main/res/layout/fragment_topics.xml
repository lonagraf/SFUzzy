<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_gravity="right"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Greeting -->
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="Hi, Name!"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold" />


        <!-- Welcome card -->

        <ImageView
            android:id="@+id/ivMascot"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:src="@drawable/sfullzzy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Текст по центру -->
                <TextView
                    android:id="@+id/tvContinue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Welcome to SFUzzy!"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>



        <!-- Topic card template -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="47dp"
                    android:layout_height="48dp"
                    android:src="@drawable/basics" />

                <TextView
                    android:id="@+id/tvTopicName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basics"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/icon"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/btnOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="47dp"
                    android:layout_height="48dp"
                    android:src="@drawable/family"/>

                <TextView
                    android:id="@+id/tvTopicName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/icon2"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/btnOpen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp">
        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="47dp"
                android:layout_height="48dp"
                android:src="@drawable/food"/>

            <TextView
                android:id="@+id/tvTopicName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textSize="18sp"
                android:layout_toEndOf="@id/icon3"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true" />

            <Button
                android:id="@+id/btnOpen3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"/>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="47dp"
                    android:layout_height="48dp"
                    android:src="@drawable/travel"/>

                <TextView
                    android:id="@+id/tvTopicName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/icon4"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/btnOpen4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>
